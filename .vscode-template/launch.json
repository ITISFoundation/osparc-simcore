  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Remote Attach webserver",
      "type": "python",
      "request": "attach",
      "port": 3001,
      "host": "127.0.0.1",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/services/web/server",
          "remoteRoot": "/devel/services/web/server"
        }
      ]
    },
      {
        "name": "Python: Remote Attach sidecar",
        "type": "python",
        "request": "attach",
        "port": 3002,
        "host": "127.0.0.1",
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}/services/sidecar",
            "remoteRoot": "/devel/services/sidecar"
          }
        ]
      },
    {
      "name": "Python: Remote Attach storage",
      "type": "python",
      "request": "attach",
      "port": 3003,
      "host": "127.0.0.1",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/services/storage",
          "remoteRoot": "/devel/services/storage"
        }
      ]
    }
  ]
}
