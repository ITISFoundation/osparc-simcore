    "/v1/containers/{id}/networks:detach": {
      "post": {
        "tags": [
          "containers"
        ],
        "summary": "detach container from a network, if not already detached",
        "operationId": "detach_container_from_network_v1_containers__id__networks_detach_post",
        "parameters": [
          {
            "required": true,
            "schema": {
              "type": "string",
              "title": "Id"
            },
            "name": "id",
            "in": "path"
          }
        ],
