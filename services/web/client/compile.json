{
  "targets": [
    {
      "type": "source",
      "outputPath": "source-output",
      "bundle": {
        "include": [ "qx.*" ]
      }
    },
    {
      "type": "build",
      "outputPath": "build-output"
    }
  ],

  // disabled as the config seems not to be doing anything yet
  //"babelOptions": {
    // run `npx browserslist` to see what is on show
    //"targets": "Chrome > 71, Firefox > 64",
    // "debug": true,
  //},

  "defaultTarget": "source",
  "locales": [
    "en"
  ],
  "lint-check": true,
  "applications": [
    {
      "class": "qxapp.Application",
      "theme": "qxapp.theme.Theme",
      "name": "qxapp",
      "title": "oSPARC",
      "default": true,
      "include": [
        "iconfont.material.Load",
        "iconfont.fontawesome5.Load"
      ]
    },
    {
      "class": "qxl.apiviewer.Application",
      "theme": "qxl.apiviewer.Theme",
      "name": "apiviewer",
      "title": "Qooxdoo API Viewer",
      "environment": {
        "excludeFromAPIViewer": [
          "qxl.*",
          "q",
          "qxWeb"
        ]
      },
      "include": [
        "qx.*"
      ],
      "exclude": [
        "qx.test.*",
        "qx.module.Blocker",
        "qx.module.Placement"
      ]
    },
    {
      "class": "qxl.testtapper.Application",
      "theme": "qxapp.theme.Theme",
      "name": "testtapper",
      "title": "Qooxdoo TestTAPper",
      "include": [
        "qxapp.test.*"
      ],
      "exclude": [
        "qx.test.*",
        "qx.module.Blocker",
        "qx.module.Placement"
      ]
    }
  ],
  "common": {
    "add-css": [
      {
        "uri": "resource/jsontreeviewer/jsonTree.css"
      }
    ],
    "add-script": [
      {
        "uri": "resource/socketio/socket.io.js"
      },
      {
        "uri": "resource/three/*.js"
      },
      {
        "uri": "resource/workbench/svg*.js"
      },
      {
        "uri": "resource/jsondiffpatch/jsondiffpatch*.js"
      },
      {
        "uri": "resource/jsontreeviewer/jsonTree.js"
      },
      {
        "uri": "resource/plotly/plotly.min.js"
      },
      {
        "uri": "resource/qxapp/*.png"
      },
      {
        "uri": "resource/qxapp/loading/*"
      }
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "globals": {
      "JSZip": false
    },
    "extends": [
      "qx/browser"
    ]
  }
}
