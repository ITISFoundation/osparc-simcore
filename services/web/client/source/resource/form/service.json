{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Add a new service",
    "description": "Please provide with all the necessary information about your service.",
    "type": "object",
    "properties": {
        "contributor": {
            "type": "object",
            "title": "Contributor information",
            "required": [
                "firstName",
                "lastName",
                "email",
                "affiliation"
            ],
            "properties": {
                "firstName": {
                    "type": "string",
                    "title": "First name"
                },
                "lastName": {
                    "type": "string",
                    "title": "Last name"
                },
                "email": {
                    "type": "string",
                    "title": "Email"
                },
                "affiliation": {
                    "type": "string",
                    "title": "Affiliation"
                }
            }
        },
        "serviceInfo": {
            "type": "object",
            "title": "Service information",
            "required": [
                "description", 
                "commandLine"
            ],
            "properties": {
                "description": {
                    "type": "string",
                    "title": "Description of the service",
                    "description": "Please provide with detailed information about how to run the service and any dependencies required."
                },
                "commandLine": {
                    "type": "string",
                    "title": "Command line interface to run service",
                    "description": "In the command line, what command is used to run the code? E.g. In Matlab Command Window: 'myproject(input1, input2, input3)'"
                },
                "url": {
                    "type": "string",
                    "title": "URL of the repository"
                },
                "codeVariant": {
                    "type": "string",
                    "title": "Language/Code type",
                    "description": "Choose one of the accepted options.",
                    "enum": ["matlab", "opencor", "python"]
                },
                "files": {
                    "type": "string",
                    "title": "File upload",
                    "description": "If your code doesn't live inside a repository, you can upload a single .zip file containing it.",
                    "contentMediaType": "application/zip"
                }
            }
        },
        "serviceInterface": {
            "type": "object",
            "title": "Service inputs and outputs",
            "properties": {
                "inputs": {
                    "title": "Inputs",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "title": "input",
                        "required": [
                            "name",
                            "type",
                            "label",
                            "defaultValue",
                            "description"
                        ],
                        "properties": {
                            "name": {
                                "type": "string",
                                "title": "Name",
                                "description": "Input's ID (variable name)."
                            },
                            "type": {
                                "type": "string",
                                "title": "Type"
                            },
                            "label": {
                                "type": "string",
                                "title": "Label",
                                "description": "Short and human-readable."
                            },
                            "defaultValue": {
                                "type": "string",
                                "title": "Default value"
                            },
                            "description": {
                                "type": "string",
                                "title": "Description",
                                "description": "Text help to understand the input and it's effects on the results."
                            }
                        }
                    }
                },
                "outputs": {
                    "title": "Outputs",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "title": "output",
                        "required": [
                            "name",
                            "type",
                            "label",
                            "defaultValue",
                            "description"
                        ],
                        "properties": {
                            "name": {
                                "type": "string",
                                "title": "Name",
                                "description": "Input's ID (variable name)."
                            },
                            "type": {
                                "type": "string",
                                "title": "Type"
                            },
                            "label": {
                                "type": "string",
                                "title": "Label",
                                "description": "Short and human-readable."
                            },
                            "defaultValue": {
                                "type": "string",
                                "title": "Default value"
                            },
                            "description": {
                                "type": "string",
                                "title": "Description",
                                "description": "Help text to understand the input and it's effects on the results."
                            }
                        }
                    }
                }
            }
        },
        "authors": {
            "title": "Authors",
            "type": "array",
            "maxItems": 2,
            "items": {
                "title": "author",
                "type": "object",
                "required": [
                    "name",
                    "email"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "title": "Full name"
                    },
                    "email": {
                        "type": "string",
                        "title": "Email",
                        "pattern": "(?:[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*|\"(?:[\\x01-\\x08\\x0b\\x0c\\x0e-\\x1f\\x21\\x23-\\x5b\\x5d-\\x7f]|\\[\\x01-\\x09\\x0b\\x0c\\x0e-\\x7f])*\")@(?:(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?|\\[(?:(?:(2(5[0-5]|[0-4][0-9])|1[0-9][0-9]|[1-9]?[0-9]))\\.){3}(?:(2(5[0-5]|[0-4][0-9])|1[0-9][0-9]|[1-9]?[0-9])|[a-z0-9-]*[a-z0-9]:(?:[\\x01-\\x08\\x0b\\x0c\\x0e-\\x1f\\x21-\\x5a\\x53-\\x7f]|\\[\\x01-\\x09\\x0b\\x0c\\x0e-\\x7f])+)\\])"
                    },
                    "affiliation": {
                        "type": "string",
                        "title": "Affiliation"
                    }
                }
            }
        }
    }
}
