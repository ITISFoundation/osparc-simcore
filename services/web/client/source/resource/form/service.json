{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Add a new service",
    "description": "Please provide with all the necessary information about your service.",
    "type": "object",
    "properties": {
        "contributor": {
            "type": "object",
            "title": "Contributor information",
            "required": [
                "firstName",
                "lastName",
                "email",
                "affiliation"
            ],
            "properties": {
                "firstName": {
                    "type": "string",
                    "title": "First name"
                },
                "lastName": {
                    "type": "string",
                    "title": "Last name"
                },
                "email": {
                    "type": "string",
                    "title": "Email"
                },
                "affiliation": {
                    "type": "string",
                    "title": "Affiliation"
                }
            }
        },
        "serviceInfo": {
            "type": "object",
            "title": "Service information",
            "required": [
                "description",
                "url"
            ],
            "properties": {
                "description": {
                    "type": "string",
                    "title": "Description of the service",
                    "description": "Please provide with detailed information about how to run the service."
                },
                "url": {
                    "type": "string",
                    "title": "URL of the repository"
                }
            }
        },
        "serviceInterface": {
            "type": "object",
            "title": "Service inputs and outputs",
            "properties": {
                "inputs": {
                    "title": "Inputs",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "title": "input",
                        "required": [
                            "name",
                            "type",
                            "label",
                            "defaultValue",
                            "description"
                        ],
                        "properties": {
                            "name": {
                                "type": "string",
                                "title": "Name",
                                "description": "Input's ID (variable name)."
                            },
                            "type": {
                                "type": "string",
                                "title": "Type"
                            },
                            "label": {
                                "type": "string",
                                "title": "Label",
                                "description": "Short and human-readable."
                            },
                            "defaultValue": {
                                "type": "string",
                                "title": "Default value"
                            },
                            "description": {
                                "type": "string",
                                "title": "Description",
                                "description": "Text help to understand the input and it's effects on the results."
                            }
                        }
                    }
                },
                "outputs": {
                    "title": "Outputs",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "title": "output",
                        "required": [
                            "name",
                            "type",
                            "label",
                            "defaultValue",
                            "description"
                        ],
                        "properties": {
                            "name": {
                                "type": "string",
                                "title": "Name",
                                "description": "Input's ID (variable name)."
                            },
                            "type": {
                                "type": "string",
                                "title": "Type"
                            },
                            "label": {
                                "type": "string",
                                "title": "Label",
                                "description": "Short and human-readable."
                            },
                            "defaultValue": {
                                "type": "string",
                                "title": "Default value"
                            },
                            "description": {
                                "type": "string",
                                "title": "Description",
                                "description": "Help text to understand the input and it's effects on the results."
                            }
                        }
                    }
                }
            }
        },
        "authors": {
            "title": "Authors",
            "type": "array",
            "items": {
                "title": "author",
                "type": "object",
                "required": [
                    "name",
                    "email"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "title": "Full name"
                    },
                    "email": {
                        "type": "string",
                        "title": "Email"
                    },
                    "affiliation": {
                        "type": "string",
                        "title": "Affiliation"
                    }
                }
            }
        },
        "members": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    }
}
