{
  "targets": [
    {
      "type": "source",
      "outputPath": "source-output"
    },
    {
      "type": "hybrid",
      "outputPath": "hybrid-output"
    },
    {
      "type": "build",
      "outputPath": "build-output"
    }
  ],
  "defaultTarget": "source",
  "locales": ["en"],
  "lint-check": true,

  "applications": [
    {
      "class": "qxapp.Application",
      "theme": "qxapp.theme.Theme",
      "name": "qxapp"
    }
  ],

  "libraries": [
    "../qooxdoo-sdk/framework",
    "."
  ],

  "common" : {
    "add-script" : [
      {
        "uri" : "resource/socketio/socket.io.js"
      },
      {
	    "uri" : "resource/three/*"
      }
    ]
  }
}
