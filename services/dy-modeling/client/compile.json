{
  "targets": [
    {
      "type": "source",
      "outputPath": "source-output"
    },
    {
      "type": "hybrid",
      "outputPath": "hybrid-output"
    },
    {
      "type": "build",
      "outputPath": "build-output"
    }
  ],
  "defaultTarget": "source",
  "locales": ["en"],
  "lint-check": true,

  "environment": {
    "qxapp.preloadModel": "",
    "qxapp.isModeler": true,
    "qxapp.isDevel": false
  },

  "applications": [
    {
      "class": "qxapp.Application",
      "theme": "qxapp.theme.Theme",
      "name": "qxapp",
      "include": [
        "qx.theme.Indigo",
        "qx.theme.Modern",
        "qx.theme.Simple",
        "iconfont.material.Load",
        "iconfont.fontawesome5.Load"
      ]
    }
  ],

  "libraries": [
    "../qooxdoo-sdk/framework",
    "."
  ],

  "common" : {
    "add-script" : [
      {
        "uri" : "resource/socketio/socket.io.js"
      }, {
	      "uri" : "resource/three/*"
      }
    ]
  }
}
